{
    "workbench.colorTheme": "Gruvbox Dark Soft",
    "editor.fontFamily": "JetBrainsMono Nerd Font, 'Courier New', monospace",
    "settingsSync.ignoredSettings": [

    ],
    
    "vim.leader": "<space>",
    "vim.easymotion": true,

    "vim.normalModeKeyBindings": [   
        {
            "before": ["<Ctrl+b>"],
            "commands": ["workbench.view.explorer"]
        },
        {
            "before": ["<Ctrl+p>"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "t", "h"],
            "commands": ["workbench.action.selectTheme"]
        },
        {
            "before": ["<leader>", "f", "r"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["<leader>", "f", "v"],
            "commands": ["actions.find"]
        },
        {
            "before": ["<leader>", "c"],
            "commands": ["workbench.action.nextEditor"] 
        },
        {
            "before": ["<leader>", "z"],
            "commands": ["workbench.action.previousEditor"] 
        },
        {
            "before": ["<leader>", "r", "n"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["g", "D"],
            "commands": ["editor.action.revealDeclaration"]
        },
        {
            "before": ["g", "d"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["<leader>", "f", "n"],
            "commands": ["welcome.showNewFileEntries"]
        },
        {
            "before": ["<leader>", "o", "t"],
            "commands": ["workbench.action.terminal.openNativeConsole"]
        },
        {
            "before": ["<leader>", "f", "f"],
            "commands": ["workbench.action.findInFiles"]
        },
        {
            "before": ["<leader>", "e"],
            "commands": ["workbench.view.explorer"] 
        },
        {
            "before": ["<leader>", "h", "a"],
            "commands": ["workbench.action.activityBarLocation.hide"]
        },
        {
            "before": ["<leader>", "x"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "c", "f"],
            "commands": [
                {
                    "command": "editor.action.formatDocument",
                    "args": {
                        "extension": "autopep8"
                    }
                }
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<Ctrl+a>"],
            "commands": ["editor.action.selectAll"]
        }
    ],
    "editor.minimap.enabled": false,
    "window.menuBarVisibility": "compact",
    "breadcrumbs.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "workbench.iconTheme": "vscode-icons",
    "workbench.activityBar.location": "hidden",
    "window.zoomLevel": 1,
    "workbench.layoutControl.enabled": false,
}
