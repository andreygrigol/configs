{
  "workbench.colorTheme": "Gruvbox Dark Soft",
  "settingsSync.ignoredSettings": [],

  "vscode_custom_css.imports": ["file:///C:/Users/aribeiro7/Documents/vscode-powerline/powerline.css"],

  "vim.leader": "<space>",
  "vim.easymotion": true,

  "vim.normalModeKeyBindings": [
    {
      "before": ["<Ctrl+b>"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<Ctrl+p>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<Ctrl+h>"],
      "after": ["<Ctrl+w>", "h"]
    },
    {
      "before": ["<Ctrl+j>"],
      "after": ["<Ctrl+w>", "j"]
    },
    {
      "before": ["<Ctrl+k>"],
      "after": ["<Ctrl+w>", "k"]
    },
    {
      "before": ["<Ctrl+l>"],
      "after": ["<Ctrl+w>", "l"]
    },
    {
      "before": ["<leader>", "t", "h"],
      "commands": ["workbench.action.selectTheme"]
    },
    {
      "before": ["<leader>", "f", "v"],
      "commands": ["actions.find"]
    },
    {
      "before": ["<Shift+l>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<Shift+h>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.revealDeclaration"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "f", "n"],
      "commands": ["welcome.showNewFileEntries"]
    },
    {
      "before": ["<leader>", "o", "t"],
      "commands": ["workbench.action.terminal.openNativeConsole"]
    },
    {
      "before": ["<leader>", "i", "t"],
      "commands": ["workbench.action.terminal.new"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "h", "a"],
      "commands": ["workbench.action.activityBarLocation.hide"]
    },
    {
      "before": ["<leader>", "x", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "a", "x"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.action.addSelectionToNextFindMatch"]
    },
    {
      "before": ["<leader>", "w", "]"],
      "commands": ["workbench.action.splitEditorToRightGroup"]
    },
    {
      "before": ["<leader>", "w", "-"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["<leader>", "c", "f"],
      "commands": [
        {
          "command": "editor.action.formatDocument",
          "args": {
            "extension": "autopep8"
          }
        }
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<Ctrl+a>"],
      "commands": ["editor.action.selectAll"]
    },
    {
      "before": ["<Alt+k>"],
      "commands": ["editor.action.copyLinesUpAction"]
    },
    {
      "before": ["<Alt+j>"],
      "commands": ["editor.action.copyLinesDownAction"]
    }
  ],
  "editor.minimap.enabled": false,
  "window.menuBarVisibility": "compact",
  "breadcrumbs.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.fontLigatures": true,
  "workbench.iconTheme": "gruvbox-material-icon-theme",
  "window.zoomLevel": 1,
  "workbench.layoutControl.enabled": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font, 'Courier New', monospace",
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  "editor.lineHeight": 1.25,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.stickyScroll.enabled": false,
  "workbench.activityBar.location": "hidden",
  }
